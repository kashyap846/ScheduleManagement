<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/welcome_message_employee"
        android:layout_width="351dp"
        android:layout_height="47dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="#BFDADD"
        android:text="@string/welcome_message_employee"
        android:textAlignment="center"
        android:textColor="#0A0000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
/>

    <Button
        android:id="@+id/view_details"
        android:layout_width="351dp"
        android:layout_height="47dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="252dp"
        android:text="@string/view_details"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_message_employee"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout_editor_absoluteY="281dp"
         />

    <Button
        android:id="@+id/change_schedule"
        android:layout_width="351dp"
        android:layout_height="47dp"
        android:layout_marginEnd="10dp"

        android:layout_marginBottom="252dp"
        android:text="Change/View Availability"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        tools:layout_editor_absoluteY="485dp"
         />

    <Button
        android:id="@+id/view_schedule"
        android:layout_width="351dp"
        android:layout_height="47dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="252dp"
        android:text="View Schedule"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        tools:layout_editor_absoluteY="485dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>